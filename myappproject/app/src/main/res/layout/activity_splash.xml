<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_splash"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.my.yhk.view.ui.SplashActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v4.view.ViewPager>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_marginBottom="@dimen/dimens_dp_5">

            <View
                android:id="@+id/v_dot1"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/page_control" />

            <View
                android:id="@+id/v_dot2"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/page_control" />

            <View
                android:id="@+id/v_dot3"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/page_control" />

            <View
                android:id="@+id/v_dot4"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/page_control" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dimens_dp_48"
        android:layout_marginLeft="@dimen/dimens_dp_40"
        android:layout_marginRight="@dimen/dimens_dp_40"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/splash_layout"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_weight="1.0"
            android:background="@color/seed_zhi_alpha"
            android:gravity="center">

            <Button
                android:id="@+id/splash_login_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/splash_tast_btn_corner_layout"
                android:paddingBottom="@dimen/dimens_dp_10"
                android:paddingLeft="@dimen/dimens_dp_35"
                android:paddingRight="@dimen/dimens_dp_35"
                android:paddingTop="@dimen/dimens_dp_10"
                android:text="@string/login_taste_right_now"
                android:textColor="@color/ec_white"
                android:textSize="@dimen/dimens_sp_16"
                android:visibility="gone">

            </Button>
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    >
    <TextView
        android:id="@+id/occupation_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/color_33"
        android:textSize="@dimen/textsize18"
        android:lineSpacingExtra="@dimen/margin_5"
        android:layout_marginLeft="@dimen/margin_15"
        android:layout_marginRight="@dimen/margin_15"
        android:layout_marginTop="@dimen/margin_15"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_15"
        android:paddingBottom="@dimen/margin_5"
        >

        <ImageView
            android:id="@+id/user_img"
            android:layout_width="@dimen/margin_45"
            android:layout_height="@dimen/margin_45"
            android:scaleType="fitXY"
            android:layout_marginLeft="@dimen/margin_15"
            />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize15"
            android:textColor="@color/color_33"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_toRightOf="@+id/user_img"
            android:layout_alignTop="@+id/user_img"
            android:text="名字"
            />

        <LinearLayout
            android:id="@+id/occupation_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_toRightOf="@+id/user_img"
            android:layout_alignBottom="@+id/user_img"
            android:layout_toLeftOf="@+id/add_friend"
            >

            <TextView
                android:id="@+id/article_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_99"
                android:textSize="@dimen/textsize8"
                android:background="@drawable/article_bg"
                android:gravity="center"
                android:paddingLeft="@dimen/margin_3"
                android:paddingRight="@dimen/margin_3"
                android:paddingTop="@dimen/margin_1"
                android:paddingBottom="@dimen/margin_1"
                android:visibility="visible"
                android:text="置顶"
                android:layout_marginRight="@dimen/margin_10"
                />

              <TextView
                  android:id="@+id/occu_info"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="@dimen/margin_5"
                  android:textColor="@color/color_99"
                  android:textSize="@dimen/textsize12"
                  />

        </LinearLayout>


        <TextView
            android:id="@+id/add_friend"
            android:layout_width="@dimen/margin_60"
            android:layout_height="@dimen/margin_25"
            android:textSize="@dimen/textsize14"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="@string/str_add_friend"
            android:layout_marginRight="@dimen/margin_15"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_15"
            android:background="@drawable/main_them_shape"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/margin_15"
        android:layout_marginLeft="@dimen/margin_15"
        android:layout_marginRight="@dimen/margin_15"
        >
        <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_33"
            android:textSize="@dimen/textsize15"
            android:lineSpacingExtra="@dimen/margin_5"
            />

        <LinearLayout
            android:id="@+id/image_li"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:showDividers = "middle"
            android:layout_marginTop="@dimen/margin_15"
            android:divider="@drawable/linear_divider"
            >

        </LinearLayout>

    </LinearLayout>


</LinearLayout>

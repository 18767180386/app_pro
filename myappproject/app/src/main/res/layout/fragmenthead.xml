<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:background="@color/theme_color"
    >

    <ImageView
        android:id="@+id/img_back_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="@dimen/margin_5"
        android:padding="@dimen/margin_5"
        android:src="@mipmap/turn_left_white" />

    <EditText
        android:id="@+id/txt_search"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_15"
        android:layout_toLeftOf="@+id/search_id"
        android:layout_toRightOf="@+id/img_back_new"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin_8"
        android:background="@drawable/search_bg"
        android:drawableLeft="@mipmap/index_search"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:hint="搜索您想要的"
        android:textColorHint="@color/color_99"
        android:textSize="12sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/search_id"
        android:layout_width="@dimen/margin_40"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize14"
        android:text="@string/search"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin_13"
        android:layout_marginRight="@dimen/margin_15"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_1px"
        android:background="@color/line"
        android:layout_alignParentBottom="true"
        ></View>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    >
    <RelativeLayout
        android:id="@+id/item_re"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/margin_15"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toLeftOf="@id/oc_img"
            >
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize16"
            android:textColor="@color/color_33"
            android:layout_marginTop="@dimen/margin_15"
            android:text="职业宝"
            android:lineSpacingExtra="@dimen/margin_5"
            android:maxLines="2"
            android:ellipsize="end"
            />
            <com.jaydenxiao.common.commonwidget.NineGridlayout
                android:id="@+id/iv_ngrid_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                >
            </com.jaydenxiao.common.commonwidget.NineGridlayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_20"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_15"
                >
                <TextView
                    android:id="@+id/is_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/main_color"
                    android:textSize="@dimen/textsize10"
                    android:background="@drawable/textview_bg"
                    android:gravity="center"
                    android:paddingLeft="@dimen/margin_3"
                    android:paddingRight="@dimen/margin_3"
                    android:paddingTop="@dimen/margin_1"
                    android:paddingBottom="@dimen/margin_1"
                    android:visibility="gone"
                    android:text="置顶"
                    android:layout_marginRight="@dimen/margin_10"
                    />

            <TextView
                android:id="@+id/oc_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_99"
                android:textSize="@dimen/textsize12"
                android:text="作者"
                />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/oc_img"
            android:layout_width="110dp"
            android:layout_height="75dp"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/margin_10"
            android:scaleType="fitXY"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_1px"
        android:background="@color/line_bg"
        >
    </View>
</LinearLayout>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.aiju.zyb.view.ui.fragment.JobIndexFragment">
    <android.support.design.widget.TabLayout
        android:id="@+id/tablayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/theme_color"
        app:tabIndicatorHeight="3px"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="@color/theme_color"
        app:tabTextColor="@color/color_66"
        app:tabTextAppearance="@style/TabLayoutTextStyle"
        >
        <!---  app:tabTextAppearance="@style/TabLayoutTextStyle" app:tabTextAppearance="@android:style/TextAppearance.Holo.Large"//设置文字的外貌-->
    </android.support.design.widget.TabLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_1px"
        android:background="@color/line_bg"
        ></View>
    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:id="@+id/view_pager">
    </android.support.v4.view.ViewPager>

</LinearLayout>

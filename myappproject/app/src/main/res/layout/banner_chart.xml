<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/margin_56"
    android:background="@drawable/listitem_selector"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/dimens_dp_15"
    android:paddingRight="@dimen/dimens_dp_15">

    <ImageView
        android:id="@+id/iv_banner_item_head"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_gravity="center_vertical"
        android:scaleType="fitCenter" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_banner_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="默认标题"
            android:textColor="#333333"
            android:textSize="@dimen/textsize16" />

        <TextView
            android:id="@+id/tv_banner_item_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="默认详细"
            android:textColor="@color/color_99"
            android:textSize="12sp"
            android:visibility="visible" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_banner_item_end"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_gravity="center_vertical" />
      <TextView
          android:id="@+id/right_text"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="@dimen/textsize12"
          android:textColor="@color/color_99"
          android:layout_gravity="center_vertical"
          android:visibility="gone"
          />
    </FrameLayout>

</LinearLayout>
